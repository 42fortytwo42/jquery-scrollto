// Import
@import url("../vendor/yui-cssreset.css")
@import url("./generic.css")

.demo
	a
		cursor: pointer
		color: blue
		display: block
		margin-bottom: 5px

		&:hover
			text-decoration: underline

	.demo-pieces
		width: 500px
		height: 200px
		overflow: scroll
		border: 5px ridge white

		div
			width: 90%
			height: 300px
			padding: 15px 4%


.social-buttons
	.social-button
		display: inline-block
		width: 100px
		text-align: left
		overflow: hidden
		&.google-plus-one-button
		&.hacker-news-submit-button
			width: 80px
		&.github-follow-button
		&.twitter-follow-button
			width: 170px
			height: auto
		&.reddit-submit-button
			width: 140px
			iframe
				padding-top: 3px
